<div class = "comments">
<% @comments.each do |comment| %>

  <span class="user"><%= link_to comment.user.name,comment.user %>: </span>

  <span class="content"><%= comment.content %></span>

  <span class="timestamp">Posted <%= time_ago_in_words(comment.created_at) %> ago.
 	<% if (current_user?(comment.entry.user) or current_user?comment.user)  %>
  	<%= link_to "Delete", comment_path(comment), method: :delete, data: { confirm: "You sure?" }%>
  <%end %>
  </span>
<% end %>
</div>
<% if !current_user.nil? %>
	<%= render 'comments/form' %>
<% end %>